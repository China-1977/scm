<view class="weui-cells__title ">购物清单 - {{store.name}}</view>
<view class="weui-panel">
	<checkbox-group class="checkbox-group" name='index' bindchange='cartChange'>
		<view wx:for="{{products}}" wx:for-item='product' wx:key="index" class="weui-media-box">
			<view class=" weui-media-box_appmsg">
				<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
					<view class="weui-badge">{{cartsPid[product.id].num}}</view>
					<image class="weui-media-box__thumb" src="{{prefix}}{{product.pictures[0]}}" />
				</view>
				<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
					<view class="weui-media-box__title">{{product.name}}</view>
					<view class="weui-media-box__desc">{{product.description}}</view>
					<view class="weui-media-box__desc"><label class="weui-cell_warn">{{product.average}}{{product.averageUnit}}</label></view>
				</view>
			</view>
			<view class="weui-flex">
				<label class="checkbox">
					<checkbox value="{{product.id}}" checked="{{cartsPid[product.id].checked}}"/>
				</label>
				<view class="weui-flex__item weui-cell__ft">
					<button type="default" size="mini" bindtap="subtractCount" id="{{index}}">减</button>
					<button type="default" size="mini" disabled="true">{{cartsPid[product.id].num}}</button>
					<button type="default" size="mini" bindtap="addCount" id="{{index}}">加</button>
				</view>
			</view>
		</view>
	</checkbox-group>
</view>
<view style="height:230rpx">

</view>

<view class="weui-cells weui-flex  weui-footer weui-footer_fixed-bottom">
	<view class='weui-flex__item weui-cell'>
		<view class="weui-cell__hd">
			<switch class="checkbox" type='checkbox' bindchange="checkAll" checked="{{checkAll}}" />全选
		</view>
		<view class="weui-cell__bd"></view>
		<view class='weui-cell__ft'>预售：<text style='color:red'>{{total}}</text>元</view>
	</view>
	<navigator class="weui-cell" url='/pages/score/confirm'>
		<button type="primary" size="mini" disabled="{{checkeds.length == 0}}">立即下单</button>
	</navigator>
</view>